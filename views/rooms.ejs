<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../views/partials/head %>
</head>
<body>
  <header>
    <% include ../views/partials/header %>
  </header>
  <div class="container">
    <h1>Rooms</h1>
    <div class="row16"></div>
    <div class="row">
      <div class="span5">
        <h3>Add a room</h3>
        <form id="adduser" action="/rooms" method="POST">
          <p>
            <label for="name">Name:</label>
            <input name="name" required="1" class="name" type="text">
          </p>
          <p>
            <input value="Add" class="btn btn-success btn-login" type="submit">
          </p>
        </form>
      </div>
      <div class="span10">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Nodes</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% rooms.forEach(function(room) { %>
            <tr>
              <td><%=room.name%></td>
              <td>5</td>
              <td>
                <a href="/rooms/<%=room.name%>" class="btn btn-danger">Delete</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <footer>
    <% include ../views/partials/footer %>
  </footer>    
</body>
</html>